[Unit]
Description=ALTRepo API gunicron server daemon
After=network.target

[Service]
User=_altrepo_api
Group=_altrepo_api
Restart=always
RestartSec=10
#WorkingDirectory=
#Environment="ALTREPO_API_CONFIG=/path/to/config/file.conf"
#ExecStart=/usr/bin/altrepo-api /path/to/config/file.conf
# Default config file location is /etc/altrepo-api/api.conf
ExecStart=/usr/bin/altrepo-api

[Install]
WantedBy=multi-user.target
